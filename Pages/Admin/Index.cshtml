@page
@model MyEshop.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Index";
}


<h1>لیست کالاها</h1>
<hr />
<a asp-page="Add" class="button-3">افزودن کالا</a>
<table>
    <thead>
        <tr>
            <th>تصویر</th>
            <th>نام</th>
            <th>قیمت</th>
            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Products)
            {
        <tr>
            <td>
                <img src="/images/@(item.Id).jpg" style="max-width: 200px;"/>
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Item.Price
            </td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                <a asp-page="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
            }
    </tbody>
</table>
